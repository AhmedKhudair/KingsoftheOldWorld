<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ahmed.salah.kingsoftheoldworld.About">



    <android.support.v7.widget.Toolbar
        app:theme="@style/AppToolbar"
        android:id="@+id/abouttoolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/splash"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <TextView
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000"
                android:lineSpacingMultiplier="1.5"
                android:layout_margin="15dp"
                android:text="@string/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="15dp"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:padding="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="برمجه و تصميم"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="احمد صلاح"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="15dp"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:padding="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="كتابه ومراجعه محتوي"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:paddingRight="15dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="احمد جمال"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>












    </ScrollView>











</LinearLayout>
